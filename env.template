# ========================================
# CONFIGURATION ENVIRONNEMENT - COMMERCIAL PFE
# ========================================
# Copier ce fichier en .env et remplir les valeurs

# ========================================
# DOCKER IMAGES
# ========================================
BACKEND_IMAGE=your-dockerhub-username/commercial-pfe-backend:latest
FRONTEND_IMAGE=your-dockerhub-username/commercial-pfe-frontend:latest

# ========================================
# MONGODB CONFIGURATION
# ========================================
MONGO_USERNAME=admin
MONGO_PASSWORD=change-this-password-in-production
MONGO_DATABASE=convention_tracker

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-256-bits
JWT_EXPIRATION=86400000

# ========================================
# EMAIL CONFIGURATION (BREVO)
# ========================================
BREVO_EMAIL=your-email@example.com
BREVO_API_KEY=your-brevo-api-key

# ========================================
# SMS CONFIGURATION (TWILIO)
# ========================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# APPLICATION CONFIGURATION
# ========================================
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# ========================================
# LOGGING
# ========================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=DEBUG
