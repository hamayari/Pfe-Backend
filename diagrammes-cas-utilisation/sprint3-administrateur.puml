@startuml
title Diagramme de cas d'utilisation raffiné - Sprint 3 : Administrateur

left to right direction

actor "Administrateur" as Admin

rectangle "Sprint 3 - Fonctionnalités Administrateur" {
  
  package "Authentification" {
    usecase "S'authentifier" as UC_Auth
    usecase "Se connecter" as UC_Login
    usecase "Se déconnecter" as UC_Logout
  }
  
  package "Gestion du Profil" {
    usecase "Consulter mon profil" as UC_Profile
    usecase "Modifier mon compte" as UC_ModifyAccount
    usecase "Réinitialiser le mot de passe" as UC_ResetPwd
    usecase "Recevoir un lien de réinitialisation par e-mail" as UC_EmailReset
  }
  
  package "Gestion des Utilisateurs (CRUD)" {
    usecase "Gérer les comptes utilisateurs" as UC_ManageUsers
    usecase "Créer un utilisateur" as UC_CreateUser
    usecase "Modifier un utilisateur" as UC_UpdateUser
    usecase "Supprimer un utilisateur" as UC_DeleteUser
    usecase "Consulter la liste des utilisateurs" as UC_ListUsers
    usecase "Attribuer des rôles" as UC_AssignRoles
    usecase "Valider les données utilisateur" as UC_ValidateUser
  }
  
  package "Gestion des Nomenclatures" {
    usecase "Gérer les nomenclatures" as UC_ManageNomenclatures
    
    usecase "Gérer les applications" as UC_ManageApps
    usecase "Créer une application" as UC_CreateApp
    usecase "Modifier une application" as UC_UpdateApp
    usecase "Supprimer une application" as UC_DeleteApp
    
    usecase "Gérer les zones géographiques" as UC_ManageZones
    usecase "Créer une zone géographique" as UC_CreateZone
    usecase "Modifier une zone géographique" as UC_UpdateZone
    usecase "Supprimer une zone géographique" as UC_DeleteZone
    
    usecase "Gérer les structures" as UC_ManageStructures
    usecase "Créer une structure" as UC_CreateStruct
    usecase "Modifier une structure" as UC_UpdateStruct
    usecase "Supprimer une structure" as UC_DeleteStruct
  }
}

' Relations principales
Admin --> UC_Auth
Admin --> UC_Profile
Admin --> UC_ModifyAccount
Admin --> UC_ResetPwd
Admin --> UC_ManageUsers
Admin --> UC_ManageNomenclatures

' Relations Authentification
UC_Auth ..> UC_Login : <<include>>
UC_Auth ..> UC_Logout : <<extend>>
UC_ResetPwd ..> UC_EmailReset : <<include>>

' Relations Gestion des Utilisateurs
UC_ManageUsers ..> UC_CreateUser : <<include>>
UC_ManageUsers ..> UC_UpdateUser : <<include>>
UC_ManageUsers ..> UC_DeleteUser : <<include>>
UC_ManageUsers ..> UC_ListUsers : <<include>>
UC_CreateUser ..> UC_AssignRoles : <<include>>
UC_UpdateUser ..> UC_AssignRoles : <<include>>
UC_CreateUser ..> UC_ValidateUser : <<include>>
UC_UpdateUser ..> UC_ValidateUser : <<include>>

' Relations Gestion des Applications
UC_ManageNomenclatures ..> UC_ManageApps : <<include>>
UC_ManageApps ..> UC_CreateApp : <<include>>
UC_ManageApps ..> UC_UpdateApp : <<include>>
UC_ManageApps ..> UC_DeleteApp : <<include>>

' Relations Gestion des Zones
UC_ManageNomenclatures ..> UC_ManageZones : <<include>>
UC_ManageZones ..> UC_CreateZone : <<include>>
UC_ManageZones ..> UC_UpdateZone : <<include>>
UC_ManageZones ..> UC_DeleteZone : <<include>>

' Relations Gestion des Structures
UC_ManageNomenclatures ..> UC_ManageStructures : <<include>>
UC_ManageStructures ..> UC_CreateStruct : <<include>>
UC_ManageStructures ..> UC_UpdateStruct : <<include>>
UC_ManageStructures ..> UC_DeleteStruct : <<include>>

@enduml
